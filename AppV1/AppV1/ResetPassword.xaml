<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppV1.ResetPassword">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="10">
             <StackLayout Orientation="Horizontal" Padding="5">
                <Entry HorizontalOptions="FillAndExpand" Placeholder="Email" x:Name="email"></Entry>
            </StackLayout>
            <StackLayout>
                <Entry HorizontalOptions="FillAndExpand" Placeholder="Password" x:Name="password"></Entry>
            </StackLayout>
            <StackLayout>
                <Entry HorizontalOptions="FillAndExpand" Placeholder="Confirm Password" x:Name="ConfirmPassword"></Entry>
            </StackLayout>
            <StackLayout>
                <Button Text="Change password" BackgroundColor="DarkOrange" Clicked="reset" CornerRadius="30" ></Button>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>