<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppV1.Login" 
           >
    <ContentPage.Content>

        <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="10">
            <StackLayout Orientation="Horizontal" Padding="5">
                
                <Entry HorizontalOptions="FillAndExpand" x:Name="username" Placeholder="Login"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Padding="5">

                <Entry HorizontalOptions="FillAndExpand" x:Name="password" Placeholder="mot de passe"></Entry>
            </StackLayout>

            <Button Text="Se connecter" Clicked="login"  BackgroundColor="LightBlue"></Button>
            <Button Text="Creer compte" Clicked="account" BackgroundColor="lightblue"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>